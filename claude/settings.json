{
  "env": {
    "ENABLE_LSP_TOOL": "1",
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "WebFetch",
      "Bash(ag:*)",
      "Bash(bun:*)",
      "Bash(git checkout:*)",
      "Bash(git switch:*)",
      "Bash(git add:*)",
      "Bash(git push:*)",
      "Bash(git commit:*)",
      "Bash(gh pr:*)",
      "Bash(gh issue:*)",
      "Bash(gh api:*)",
      "Bash(ls:*)",
      "Bash(diff:*)",
      "Bash(find:*)",
      "Bash(gemini:*)",
      "Bash(codex:*)",
      "Bash(osascript:*)",
      "Bash(summarize:*)",
      "WebSearch"
    ],
    "deny": [
      "Read(.env*)",
      "Write(.env*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Bash(sudo:*)",
      "Bash(rm:*)",
      "Bash(curl:*)",
      "Read(./.entire/metadata/**)"
    ],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "SessionStart": [],
    "SessionEnd": [],
    "UserPromptSubmit": [],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "command -v afplay >/dev/null 2>&1 && afplay /System/Library/Sounds/Hero.aiff || true; command -v osascript >/dev/null 2>&1 && osascript -e 'display notification \"finished\" with title \"Claude Code\"' || true"
          }
        ]
      }
    ],
    "PreToolUse": [],
    "PostToolUse": []
  },
  "enabledPlugins": {
    "claude-mem@thedotmack": true,
    "ralph-loop@claude-plugins-official": true,
    "dig@kuu-marketplace": true,
    "code-simplifier@claude-plugins-official": true,
    "ruby-skills@ruby-skills": true,
    "ruby-lsp@ruby-skills": true
  },
  "skipDangerousModePermissionPrompt": true
}
